{{> header}}
<div class="container my-5">
  <h1>Profile</h1>
  <div class="saved-svgs">
    <h2>Your Saved Labels</h2>
    <div id="savedSvgsContainer">
      <!-- SVGs will be dynamically added here -->
    </div>
  </div>
</div>
{{> footer}}
<script>
  document.addEventListener('DOMContentLoaded', () => {
    fetch('/api/users/saved-svgs')
      .then(response => response.json())
      .then(svgs => {
        const container = document.getElementById('savedSvgsContainer');
        svgs.forEach(svg => {
          const div = document.createElement('div');
          div.innerHTML = svg;
          container.appendChild(div);
        });
      })
      .catch(error => console.error('Error fetching saved SVGs:', error));
  });
</script>
